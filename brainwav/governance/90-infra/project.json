{
  "name": "governance",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "root": "governance",
  "projectType": "library",
  "targets": {
    "memorize": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm run commands:memorize -- $TASK_SLUG"
      },
      "outputs": [
        "{homedir}/.agentic-governance/tasks/*/logs/memorize"
      ]
    },
    "arc:close": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "target": "test",
          "projects": "*"
        },
        {
          "target": "lint",
          "projects": "*"
        },
        {
          "target": "typecheck",
          "projects": "*"
        }
      ],
      "options": {
        "command": "nx run governance:memorize"
      }
    }
  },
  "tags": [
    "scope:governance",
    "type:ops"
  ],
  "_note": "Nx integration is pack-scoped (pack:nx/pack:monorepo). Core governance must not require Nx. Consumer repos not using Nx should not receive this file."
}
